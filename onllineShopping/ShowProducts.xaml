<Page x:Class="onllineShopping.ShowProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:onllineShopping"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowProducts">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Name="dgrid" Grid.Row="1" Width="600" Height="200"></DataGrid>

        <TextBox Name="txtprduectid" Text="Product ID" TextAlignment="Center" Grid.Row="0" Width="180" Height="30" FontSize="15" FontWeight="Bold" Margin="33,35,587,160" BorderThickness="3,3,3,3" BorderBrush="#FF0056FF"></TextBox>
        <TextBox Name="txtquantity" Text="Quantity" TextAlignment="Center" Grid.Row="0" Width="180" Height="30" FontSize="15" FontWeight="Bold" Margin="33,82,587,113" BorderThickness="3,3,3,3" BorderBrush="#FF0056FF"></TextBox>

        <Button Content="Add To cart" Width="120" Grid.Row="0" FontWeight="Bold" FontSize="15" Margin="209,136,471,57" Click="Button_Click"/>
        <Button Content="Go to cart" Width="120" Grid.Row="0" FontWeight="Bold" FontSize="15" Margin="634,183,46,10" Click="Button_Click_1"/>
    </Grid>
</Page>
