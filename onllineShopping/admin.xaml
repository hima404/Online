<Page x:Class="onllineShopping.admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:onllineShopping"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="admin">

    <Grid Background="White">
        <!-- Product Name -->
        <TextBlock Text="Product Name:" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="txtProductName" Width="200" Height="25" VerticalAlignment="Top" Margin="120,10,0,0" />

        <!-- Product Price -->
        <TextBlock Text="Price:" VerticalAlignment="Top" Margin="10,50,0,0" />
        <TextBox x:Name="txtPrice" Width="200" Height="25" VerticalAlignment="Top" Margin="120,50,0,0" />

        <!-- Add Product Button -->
        <Button Content="Add Product" Width="120" Height="30" VerticalAlignment="Top" Margin="614,58,66,0" Click="AddProduct_Click" />

        <!-- DataGrid for Product List -->
        <DataGrid x:Name="dataGridProducts" AutoGenerateColumns="True" Margin="10,100,10,10" />
    </Grid>
</Page>
